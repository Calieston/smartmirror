doctype html
html
  head
    title Smartmirror
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    header
      p Hallo, #{user.username}
      time=new Date().toLocaleString()
    h1= userid

    //- Create Widget Container
    each widget in user.widgets
      section(id=widget._id class=[widget.name, 'widget'], data-x=widget.position.x, data-y=widget.position.y data-module=widget.module)

    //- Load all core scripts
    //- script(src='/javascripts/angular.js')
    script(src='/javascripts/main.js')