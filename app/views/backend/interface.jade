extends layout

block head
  - var title='Interface'
  link(rel='stylesheet', href='/stylesheets/angular-gridster.min.css')

block content

  header.page-header
    h2 Interface Konfigurator

  section.col-sm-12
    header
      h2 Widgets

    div.widgets.droparea
      each widget in widgets
        div(id=widget._id draggable="true" data-size=widget.size).widget=widget.name
      div(draggable="true" data-size="4x4")#asdfasdf.widget big one

    section
      header
        h2 Interface
      div.interface.droparea
        each widget in user.widgets
          div(id=widget.id draggable="true" data-size=widget.size data-y=widget.position.y data-x=widget.position.x).widget=widget.name

    form(action="/interface/#{user._id}" method="POST")
      input(type="hidden" name="widgets")
      button(type="submit").btn.btn-primary Speichern

block footer
  script(src='/javascripts/interface.js')
